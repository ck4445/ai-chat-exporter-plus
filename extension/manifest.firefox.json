{
  "manifest_version": 3,
  "name": "AI Chat Exporter Plus",
  "description": "Export ChatGPT, Claude, Copilot, and Gemini chats as JSONL.",
  "version": "2.7.1",
  "permissions": [
    "downloads"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://chat.openai.com/*",
        "https://chatgpt.com/*",
        "https://claude.ai/*",
        "https://copilot.microsoft.com/*",
        "https://gemini.google.com/*"
      ],
      "js": [
        "content-script.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "ai-chat-exporter-plus@ck4445.github"
    }
  }
}
